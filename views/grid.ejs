   <body style="background-color: #232323;">
      <div class="grid-portfolio" id="portfolio" style="width: 100%; height:100%;">
         <div class="container">
            <table style="width: 100%;">
               <tr style="width: 100%;">
                  <td style="width: 50%;">
                     <h1 style="color: #FFFFFF;">PELISLINE</h1>
                  </td>
                  <% if(login){ %>
                  <td style="width:50%; text-align:right;padding-bottom: 10px;padding-right: 50px;">
                     <h2 style="color: gainsboro;"><%=name%></h2>
                  </td>
                  <td style="width: 50%; text-align: right;">
                     <a style="text-decoration: none;" href="/logout"><button type="button" class="btn btn-secondary">Cerrar Sesion</button></a>
                  </td>
                  <% } %>
               </tr>
            </table>
            <div class="row align-items-start" id="div_movies_popular">
            </div>
            <form action="javascript:void(0);">
               <div class="form-group" style="text-align: left; color: #FFFFFF;">
                  <label for="exampleInputEmail1">Buscar pelicula</label>
                  <input type="text" class="form-control" id="BusquedaPelicula" aria-describedby="emailHelp" placeholder="Search">
                  <small id="emailHelp" class="form-text text-muted"">esperemos que exista :3</small>
               </div>
            </form>
            <div id="ResultadoBusqueda" style="text-align: center;">
            </div>
         </div>
      </div>
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <% if(typeof alert != "undefined") { %>
      <script>
         Swal.fire({
             title: '<strong><%= alertTitle %></strong>',
             icon: '<%= alertIcon %>',
             html:'<h6><%= alertMessage %></h6>',
             showCloseButton: true,
             showCancelButton: false,
             focusConfirm: false,
             showConfirmButton: <%=showConfirmButton%>,
             timer: <%=timer%>,
         }).then(() => {
             window.location='/<%= ruta %>'
         })
      </script>
      <% } %>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
