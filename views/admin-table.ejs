<!doctype html>
<html lang="en">
   <head>
      <title>Table</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <link rel="apple-touch-icon" href="apple-touch-icon.png">
      <link rel="icon" href="/resources/src/bxs-movie.png">
      <link rel="stylesheet" href="/resources/css/bootstrap.css">
      <link rel="stylesheet" href="/resources/css/bootstrap.min.css">
      <link rel="stylesheet" href="/resources/css/bootstrap-theme.min.css">
      <link rel="stylesheet" href="/resources/css/fontAwesome.css">
      <link rel="stylesheet" href="/resources/css/light-box.css">
      <link rel="stylesheet" href="/resources/css/templatemo-style.css">
      <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
   </head>
   <body style="background-color: #232323;">
      <div style="background-color: #313131; width: 100%;">
         <div class="container">
            <table style="width: 100%;">
               <tr style="width: 100%;">
                  <td style="width: 50%;">
                     <a href="/home" style="text-decoration:none;">
                        <h1 style="color: #FFFFFF;">PELISLINE</h1>
                     </a>
                  </td>
                  <% if(login) { %>
                  <td style="width:50%; text-align:right;padding-bottom: 10px;padding-right: 50px;">
                     <h2 style="color: gainsboro;">
                        <%=name%>
                     </h2>
                  </td>
                  <td style="width: 50%; text-align: right;">
                     <a style="text-decoration: none;" href="/logout"><button type="button"
                        class="btn btn-secondary">Cerrar Sesion</button></a>
                  </td>
                  <% } %>
               </tr>
            </table>
         </div>
      </div>
      <p></p>
      <section class="ftco-section">
         <div class="container">
            <div class="row justify-content-left">
               <div class="col-md-6 text-left mb-5">
                  <div class="form-group" style="text-align: left; color: #FFFFFF;">
                     <label for="exampleInputEmail1">
                        <h4>Buscar Usuario</h4>
                     </label>
                     <input type="text" class="form-control" id="BuscarUsuario" aria-describedby="emailHelp"
                        placeholder="Search">
                  </div>
               </div>
            </div>
            <p></p>
            <div class="row">
               <div class="col-md-12">
                  <div class="table-wrap">
                     <table class="table table-dark table-bordered" style="color: #FFFFFF; text-align: center;">
                        <thead>
                           <tr>
                              <th>
                                 <h3 style="text-align:center;">Nombre de usuario</h3>
                              </th>
                              <th>
                                 <h3 style="text-align:center;">Rol</h3>
                              </th>
                             <th>
                                 <h3 style="text-align:center;">Cambiar rol</h3>
                              </th>
                           </tr>
                        </thead>
                        <tbody>
                           <% if(users) { %>
                           <% users.forEach(user => { %>
                           <tr>
                              <td name="name" scope="row"><h4><%= user.nickname %></h4></td>
                              <td name="tipousuario" scope="row"><h4 id="tipousuario_<%=user.id%>"><%= user.tipousuario %></h4></td>
                              <td>
                                 <div class="form-check-<%=user.id%>">
                                    <input class="form-check-input-<%=user.id%>" type="radio" name="input-<%=user.id%>" id="user_<%=user.id%>" value="user" onclick="updateRolUser(<%=user.id%>)" <% if(user.tipousuario=="user"){ %>checked<% } %>>
                                    <label class="form-check-label-<%=user.id%>" for="exampleRadios1-<%=user.id%>">
                                    User
                                    </label>
                                 </div>
                                 <div class="form-check-<%=user.id%>">
                                    <input class="form-check-input-<%=user.id%>" type="radio" name="input-<%=user.id%>" id="analyst_<%=user.id%>" value="analyst" onclick="updateRolUser(<%=user.id%>)" <% if(user.tipousuario=="analyst"){ %>checked<% } %>>
                                    <label class="form-check-label-<%=user.id%>" for="exampleRadios2-<%=user.id%>">
                                    Analyst
                                    </label>
                                 </div>
                              </td>
                           </tr>
                           <% }); %>
                           <% } %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <% if(alert) { %>
      <script>
         Swal.fire({
            title: '<strong><%= alertTitle %></strong>',
            icon: '<%= alertIcon %>',
            html: '<h6><%= alertMessage %></h6>',
            showCloseButton: true,
            showCancelButton: false,
            focusConfirm: false,
            showConfirmButton: <%=showConfirmButton%>,
         }).then(() => {
               window.location = '/<%= ruta %>'
            })
      </script>
      <% } %>
      <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
      <link rel="stylesheet" href="/resources/css/bootstrap.css">
      <link rel="stylesheet" href="/resources/css/bootstrap.min.css">
      <link rel="stylesheet" href="/resources/css/bootstrap-theme.min.css">
      <script src="/resources/js/functions_table_admin.js"></script>
   </body>
</html>