</head>

<body style="background-color: #232323;">


    <div class="grid-portfolio" id="portfolio" style="width: 100%; height:100%;">
        <div class="container">

            <table style="width: 100%;">

                <tr style="width: 100%;">
                    <td style="width: 50%;">
                        <button class="btn home">PELISLINE</button>
                    </td>
                    <% if(login){ %>
                        <td style="width:50%; text-align:right;padding-bottom: 10px;padding-right: 50px;">
                            <h2 style="color: gainsboro;">
                                <%=name%>
                            </h2>
                        </td>
                        <td style="width: 50%; text-align: right;">
                            <button type="button" class="btn btn-secondary"><a style="text-decoration: none;"
                                    href="/logout">Cerrar Sesion</a></button>
                        </td>
                        <% } %>
                </tr>

            </table>
            <div class="container">
                <table style="width: 100%;">
                    <tr style="width: 100%;">
                        <td style="width: 50%;">
                            <h2 style="color: #FFFFFF; display: inline ;">Reseñando: </h2>
                            <h2 style="color: #FFFFFF; display: inline ;">Nombre de Pelicula </h2>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="container">
            <div class="formulario-reseña">
                <form method="post" action="/">
                    <div>
                        <label for="Titulo reseña" style="width: 100%">
                            <span class="required">Titulo reseña: *</span>
                            <input type="text" id="titulo" name="titulo" value="" placeholder="" required="required"
                                tabindex="1" autofocus="autofocus" />
                        </label>
                    </div>
                    <div>
                        <label for="Calificación" style="width: auto">
                            <span class="required">Calificación: *</span>
                            <input type="number" id="Calificación" name="Calificación" value="" placeholder="valor / 5"
                                required="required" tabindex="2" min="0" max="5" class="Calificación" />
                        </label>
                    </div>
                    <div>
                        <label for="Contenido" style="width: 100%">
                            <span class="required">Contenido: *</span>
                            <textarea id="Contenido" name="contenido" tabindex="3" required="required"
                                placeholder="Maximo 1000 caracteres" maxlength="1000"></textarea>
                        </label>
                    </div>
                    <div>
                        <button name="submit" type="submit" id="submit">Publicar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>

    <script src="/resources/js/vendor/bootstrap.min.js"></script>

    <script src="/resources/js/plugins.js"></script>
    <script src="/resources/js/main.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script type="module" src="/resources/js/class VistaManager.js"></script>


</body>

</html>